# .env örnek dosyası
# Gerçek değerleri bu dosyaya YAZMAYIN
# Bu dosyayı kopyalayıp .env olarak kaydedip gerçek değerleri oraya yazın

# Veritabanı Ayarları
DB_HOST=veritabani_host_adresi
DB_USER=kullanici_adi
DB_PASS=sifre
DB_NAME=veritabani_adi
DB_PORT=3306

# Uygulama Ayarları
PORT=3000

# Frontend ve API URL'leri
FRONTEND_URL=https://example.com
BASE_URL=https://api.example.com

# E-posta Ayarları
EMAIL_USER=email@example.com
EMAIL_PASS=email_sifresi

# Güvenlik
JWT_SECRET=gizli_jwt_anahtari 